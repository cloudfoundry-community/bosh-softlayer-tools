#!/bin/bash

(
  set -e

  echo -e "\n Install vagrant plugins..."
  vagrant plugin install vagrant-berkshelf
  vagrant plugin install vagrant-omnibus
  vagrant plugin install vagrant-aws --plugin-version 0.5.0

  echo -e "\n Fresh copy of bosh repo, probably unnecessary..."
  cd bosh
  git submodule update --init --recursive

  echo -e "\n Bring up vagrant stemcell building VM for AWS EC2-Classic..."
  cd bosh-stemcell
  vagrant up remote --provider=aws

  echo -e "\n Update source code on stemcell building VM..."
  vagrant provision remote

  echo -e "\n Build vsphere stemcell..."
  vagrant ssh -c '
    cd /bosh
    CANDIDATE_BUILD_NUMBER=3019 bundle exec rake stemcell:build[vsphere,esxi,ubuntu,trusty,go,bosh-os-images,bosh-ubuntu-trusty-os-image.tgz]
  ' remote
)
